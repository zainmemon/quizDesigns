<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffac4e"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_networkPoll"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/poll_signals" />

    <TextView
        android:id="@+id/text_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_networkPoll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="OOPS !!"
        android:textColor="#dd4c39"
        android:textSize="25sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/text_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_warning"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="YOU SEEM TO HAVE \nNO NETWORK CONNECTION.\nTAP TO TRY AGAIN !"
        android:textColor="#dd4c39"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_guide"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="TRY AGAIN"
        android:textColor="#dd4c39"
        android:textSize="20sp"
        android:textStyle="italic|bold" />

</RelativeLayout>