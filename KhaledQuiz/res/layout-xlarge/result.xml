<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a2340"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/result" />

    <RelativeLayout
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_result" >

        <ImageView
            android:id="@+id/player1_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/player_white_pic" />

        <TextView
            android:id="@+id/player1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/player1_picture"
            android:text="Player Name"
            android:textColor="#de4b39"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player1_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/player1_picture"
            android:text="Level [score]"
            android:textColor="#de4b39"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/player1_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player1_picture"
            android:layout_marginLeft="30dp"
            android:src="@drawable/flag1" />

        <TextView
            android:id="@+id/player1_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player1_score"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/player1_flag"
            android:text="POINTS:"
            android:textColor="#de4b39"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player1" >

        <ImageView
            android:id="@+id/player2_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/player_white_pic" />

        <TextView
            android:id="@+id/player2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/player2_picture"
            android:text="Player Name"
            android:textColor="#de4b39"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player2_name"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/player2_picture"
            android:text="Level [score]"
            android:textColor="#de4b39"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/player2_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/player2_picture"
            android:layout_marginRight="25dp"
            android:src="@drawable/flag1" />

        <TextView
            android:id="@+id/player2_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player2_score"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/player2_flag"
            android:text="POINTS:"
            android:textColor="#de4b39"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/playagain" />

    <LinearLayout
        android:id="@+id/footer_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_again"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/facebook_sharing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/f_share" />

        <ImageView
            android:id="@+id/gmail_sharing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/g_share" />
    </LinearLayout>

</RelativeLayout>